DEBUG = <%= @debug ? "True" : "False" %>
<% if @settings then -%>
<% @settings.each do |k,v| -%>
<% if v != nil and v != "" then -%>
<%= k %> = <%= v %>
<% end -%>
<% end -%>
<% end -%>

SHAREABOUTS = {
<% if @shareabouts[:flavor] -%>
    'FLAVOR': <%= @shareabouts[:flavor] %>,
<% end -%>
<% if @shareabouts[:dataset_root] -%>
    'DATASET_ROOT': <%= @shareabouts[:dataset_root] %>,
<% end -%>
<% if @shareabouts[:dataset_key] -%>
    'DATASET_KEY': <%= @shareabouts[:dataset_key] %>
<% end -%>
}

<% if not @shareabouts[:default_api] %>
DATABASES = {
    'default': {
<% if @database[:settings][:database] -%>
        'NAME': <%= @database[:settings][:database] %>,
<% end -%>
<% if @database[:settings][:adapter] -%>
        'ENGINE': <%= @database[:settings][:adapter] %>,
<% end -%>
<% if @database[:settings][:username] -%>
        'USER': <%= @database[:settings][:username] %>,
<% end -%>
<% if @database[:settings][:password] -%>
        'PASSWORD': <%= @database[:settings][:password] %>,
<% end -%>
<% if @database[:host] -%>
        'HOST': <%= @database[:host] %>,
<% end -%>
<% if @database[:settings][:port] -%>
        'PORT': <%= @database[:settings][:port]  %>,
<% end -%>
    },
}

REST_FRAMEWORK = {
<% if @rest_framework[:paginate_by] -%>
    'PAGINATE_BY': <%= @rest_framework[:paginate_by] %>, 
<% end -%>
<% if @rest_framework[:paginate_by_param] -%>
    'PAGINATE_BY_PARAM': <%= @rest_framework[:paginate_by_param] %>
<% end -%>
}
<% end %>
